<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20dp"
        android:gravity="right"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40dp"
        android:gravity="right"
        android:paddingRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnC"
            style="@style/button_C_style_land"
            android:text="C"/>

        <Button
            android:id="@+id/btnDel"
            style="@style/button_C_style_land"
            android:text="Del"/>

        <Button
            android:id="@+id/btnPercent"
            style="@style/button_function_style_land"
            android:text="%"/>

        <Button
            android:id="@+id/btnDevide"
            style="@style/button_function_style_land"
            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            style="@style/button_style_land"
            android:text="7"/>

        <Button
            android:id="@+id/btn8"
            style="@style/button_style_land"
            android:text="8"/>

        <Button
            android:id="@+id/btn9"
            style="@style/button_style_land"
            android:text="9"/>

        <Button
            android:id="@+id/btnMultipy"
            style="@style/button_function_style_land"
            android:text="x"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            style="@style/button_style_land"
            android:text="4"/>

        <Button
            android:id="@+id/btn5"
            style="@style/button_style_land"
            android:text="5"/>

        <Button
            android:id="@+id/btn6"
            style="@style/button_style_land"
            android:text="6"/>

        <Button
            android:id="@+id/btnMinus"
            style="@style/button_function_style_land"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            style="@style/button_style_land"
            android:text="1"/>

        <Button
            android:id="@+id/btn2"
            style="@style/button_style_land"
            android:text="2"/>

        <Button
            android:id="@+id/btn3"
            style="@style/button_style_land"
            android:text="3"/>

        <Button
            android:id="@+id/btnPlus"
            style="@style/button_function_style_land"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPorM"
            style="@style/button_function_style"
            android:text="+/-"/>

        <Button
            android:id="@+id/btn0"
            style="@style/button_style_land"
            android:text="0"/>

        <Button
            android:id="@+id/btnDot"
            style="@style/button_style_land"
            android:text="."/>

        <Button
            android:id="@+id/btnEqual"
            style="@style/button_function_style_land"
            android:text="="/>

    </LinearLayout>

</LinearLayout>

